{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spread Backtest Configuration",
  "description": "Configuration for running parameter sweep backtests on spread trading strategies",
  "type": "object",
  "required": ["variables", "constants"],
  "properties": {
    "variables": {
      "type": "array",
      "description": "Array of variable parameters that will be swept across ranges",
      "items": {
        "type": "object",
        "required": ["name", "min", "max", "step"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["stdDevMultiplier", "windowLength"],
            "description": "Name of the variable parameter"
          },
          "min": {
            "type": "number",
            "description": "Minimum value for this parameter (inclusive)"
          },
          "max": {
            "type": "number",
            "description": "Maximum value for this parameter (inclusive)"
          },
          "step": {
            "type": "number",
            "exclusiveMinimum": 0,
            "description": "Step size for generating values between min and max"
          }
        }
      },
      "minItems": 1
    },
    "constants": {
      "type": "object",
      "description": "Constant parameters that remain the same for all permutations",
      "required": ["timezone", "startDate", "endDate", "assets"],
      "properties": {
        "timezone": {
          "type": "string",
          "description": "IANA timezone identifier (e.g., 'America/New_York', 'UTC')",
          "pattern": "^[A-Za-z_][A-Za-z0-9_/+-]+$"
        },
        "startDate": {
          "type": "string",
          "description": "Start date of the backtest period in ISO-8601 format (YYYY-MM-DD)",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "endDate": {
          "type": "string",
          "description": "End date of the backtest period in ISO-8601 format (YYYY-MM-DD)",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "assets": {
          "type": "object",
          "description": "Asset definitions with paths and weights",
          "required": ["assetA", "assetB"],
          "properties": {
            "assetA": {
              "type": "object",
              "required": ["path", "weight"],
              "properties": {
                "path": {
                  "type": "string",
                  "description": "Relative file path to the asset data file (relative to data/ directory)"
                },
                "weight": {
                  "type": "number",
                  "description": "Weight multiplier for this asset in the spread calculation"
                }
              }
            },
            "assetB": {
              "type": "object",
              "required": ["path", "weight"],
              "properties": {
                "path": {
                  "type": "string",
                  "description": "Relative file path to the asset data file (relative to data/ directory)"
                },
                "weight": {
                  "type": "number",
                  "description": "Weight multiplier for this asset in the spread calculation"
                }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}

